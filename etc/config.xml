<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/config.xsd">
    <default>
        <mage_stack>
            <general>
                <index_prefix>magento_logs</index_prefix>
                <log_levels>100,200,250,300,400,500,550,600</log_levels>
                <rotation>YYYY.MM.dd</rotation>
            </general>
        </mage_stack>
    </default>
</config>